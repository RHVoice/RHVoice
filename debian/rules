#!/usr/bin/make -f
# See debhelper(7) (uncomment to enable)
# output every command that modifies files on the build system.
#export DH_VERBOSE = 1

DPKG_EXPORT_BUILDFLAGS = 1

include /usr/share/dpkg/default.mk

%:
	dh $@

override_dh_auto_clean:
	rm -rf build
	find . -name '*.pyc' -print0 | xargs -0 rm -f
	dh_clean

override_dh_auto_build-arch:
	scons CFLAGS='$(CFLAGS)' LDFLAGS='$(LDFLAGS)' CXXFLAGS='$(CXXFLAGS)' CPPFLAGS='$(CPPFLAGS)' prefix=/usr bindir=/usr/bin libdir=/usr/lib/$(DEB_HOST_MULTIARCH) sysconfdir=/etc

override_dh_auto_install:
	scons DESTDIR=$(CURDIR)/debian/tmp install
	for lib in $(CURDIR)/debian/tmp/usr/lib/*/*.so.*; do l=`basename $$lib`; ln -s "$$l" "$${lib%%.so.*.*}.so"; ln -s "$$l" "$${lib%%.[0-9].[0-9]}"; done

override_dh_shlibdeps:
	dh_shlibdeps

