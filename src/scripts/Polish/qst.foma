source gpos.foma
clear

define WhInitialConjunction 
a | no | i | [tak (i)] | inaczej | tylko | to | co | czy ; 

define StartOfWhQuestion 
(WhInitialConjunction) (Preposition) Relative ; 

define DefaultTagger 
[..] -> %= q || _ .#. ; 

define WhQuestionTagger 
q -> whq || [.#.|%-] StartOfWhQuestion ?+ %= _ .#. ; 

define ElQuestionTagger 
q -> elq || .#. a (Preposition) ? %= _ .#. ; 

define AltQuestionTagger 
q -> altq || lub ?+ %= _ .#. ; 

define Tagger 
DefaultTagger .o. 
AltQuestionTagger .o. 
WhQuestionTagger .o. 
ElQuestionTagger ; 

regex Tagger ; 
